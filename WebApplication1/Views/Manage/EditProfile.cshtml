@model TechmerVision.Models.EditProfileViewModel
@{
    ViewBag.Title = "Edit Profile";
}

@using (Html.BeginForm("EditProfile", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4 class="center-block text-center">Edit Profile Information</h4>
    @Html.ValidationSummary("", new { @class = "text-danger text-center" })
    <div class="row row-centered">
        <div class="form-group col-lg-4 col-centered">
            @Html.LabelFor(m => m.FirstName, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="row row-centered">
        <div class="form-group col-lg-4 col-centered">
            @Html.LabelFor(m => m.LastName, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="row row-centered">
        <div class="form-group col-lg-4 col-centered">
            @Html.LabelFor(m => m.CompanyName, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="row row-centered">
        <div class="form-group col-lg-4 col-centered">
            @Html.LabelFor(m => m.Website, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.TextBoxFor(m => m.Website, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="row row-centered">
        <div class="form-group col-lg-4 col-centered">
            @Html.LabelFor(m => m.Title, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="row row-centered">
        <div class="form-group col-lg-4 col-centered">
            @Html.LabelFor(m => m.Phone, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="row row-centered">
        <div class="form-group col-lg-4 col-centered">
            @Html.LabelFor(m => m.DesignRole, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.TextBoxFor(m => m.DesignRole, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="row row-centered">
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
