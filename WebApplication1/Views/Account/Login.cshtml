@using TechmerVision.Models
@model LoginViewModel
@{
    ViewBag.Title = "TechmerVision Log in";
}

<img class="center-block text-center img-responsive" src="~/images/TechmerVisionLogo-md.png" />

<section id="loginForm">
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal center-block text-center", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger center-block text-center" })
        <div class="row">
            <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4 ">
                <div class="form-group">

                    @Html.LabelFor(m => m.Email, new { @class = "control-label col-sm-2"})
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "control-label col-sm-2" })
                    <div class="col-sm-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
                <div class="form-group">
                    <div class="col-sm-6">
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe)
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <input type="submit" value="Log in" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-8 col-sm-offset-2 col-md-8 col-md-offset-2 col-lg-4 col-lg-offset-4">
                <div class="form-group">
                    <div class="col-sm-6 col-md-5 col-md-offset-1">
                        <p>
                            @Html.ActionLink("Forgot your password?", "ForgotPassword")
                        </p>
                    </div>
                    <div class="col-sm-6 col-md-5">
                        <p>
                            @Html.ActionLink("Sign up for an account", "Register")
                        </p>
                    </div>
                </div>
            </div>
        </div>
    }
</section>

<div class="row row-centered">
    <div class="col-lg-12 col-centered">
        <section id="socialLoginForm" >
            <div class="form-group col-lg-4 col-centered">
                @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
            </div>
        </section>
    </div>
</div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }



